{
    "$id": "category-schema.json",
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Category",
    "type": "object",
    "required": [
        "name"
    ],
    "properties": {
        "name": {
            "type": "string",
            "minLength": 5
        },
        "code": {
            "type": "string"
        },
        "status": {
            "type": "string",
            "enum": [
                "Live",
                "Retired"
            ],
            "default": "Live"
        },
        "description": {
            "type": "string"
        },
        "identifier": {
            "type": "string"
        },
        "trackable": {
            "type": "boolean",
            "default": false
        }
    },
  "additionalProperties": false
}