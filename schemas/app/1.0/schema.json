{
  "$id": "app-schema.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "App",
  "type": "object",
  "required": [
    "name",
    "logo",
    "provider",
    "osType",
    "osMetadata"
  ],
  "properties": {
    "name": {
      "type": "string",
      "minLength": 5
    },
    "status": {
      "type": "string",
      "enum": [
        "Draft",
        "Live",
        "Retired"
      ],
      "default": "Draft"
    },
    "description": {
      "type": "string"
    },
    "identifier": {
      "type": "string"
    },
    "logo": {
      "type": "string",
      "format": ""
    },
    "provider": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "copyright": {
          "type": "string"
        },
        "license": {
          "type": "string"
        }
      },
      "required": [
        "name"
      ],
      "additionalProperties": false
    },
    "osType": {
      "type": "string",
      "enum": [
        "Android",
        "iOS"
      ]
    },
    "osMetadata": {
      "type": "object",
      "properties": {
        "packageId": {
          "type": "string"
        },
        "appVersion": {
          "type": "string"
        },
        "compatibilityVer": {
          "type": "string"
        },
        "urlScheme": {
          "type": "string"
        }
      },
      "required": [
        "packageId",
        "appVersion",
        "compatibilityVer"
      ],
      "additionalProperties": false
    },
    "actions": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["IN", "OUT"]
          },
          "id": {
            "type": "string"
          },
          "payload": {
            "type": "string"
          },
          "ctx_id": {
            "type": "string"
          },
          "ctx_type": {
            "type": "string"
          },
          "subctx_id": {
            "type": "string"
          },
          "subctx_type": {
            "type": "string"
          },
          "extra": {
            "type": "string"
          }
        },
        "required": [
          "type",
          "id"
        ],
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}